            <?php
            
            $mysqli = new mysqli("sql12.freemysqlhosting.net", "sql12601142", "CmxBFRJGx6", "sql12601142");
           
            if ($mysqli->connect_errno) {
                echo "Failed to connect to MySQL: " . $mysqli->connect_error;
                exit();
            }
            
      
            $sql = "SELECT chat_id, message, sender_id, sender_name, date FROM chat_log";
            if ($result = $mysqli->query($sql)) {
                // 取得每一筆資料，填入表格中
                while ($row = $result->fetch_assoc()) {
                    echo "<tr>";
                    echo "<td>" . $row['message'] . "</td>";
                    echo "<td>" . $row['sender_name'] . "</td>";
                    echo "<td>" . $row['date'] . "</td>";
                    echo "</tr>";
                }
               
                $result->free();
            }
           
            $mysqli->close();
            ?>
